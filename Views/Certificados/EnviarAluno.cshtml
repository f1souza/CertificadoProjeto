@{
    ViewData["Title"] = "Gerar Certificado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <div class="alert alert-info text-center mb-4">
                        <strong><i class="fas fa-graduation-cap"></i> Curso:</strong>
                        <span class="badge bg-primary fs-6">@ViewBag.NomeCurso</span>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- ⭐ Card de Instagram - ACIMA DO FORMULÁRIO -->
                    <div class="instagram-card mb-4">
                        <div class="instagram-icon">
                            <i class="fab fa-instagram"></i>
                        </div>
                        <h5 class="instagram-title">
                            <i class="fas fa-gift"></i> Ganhe um Presentinho!
                        </h5>
                        <p class="instagram-text">
                            Parabéns por terminar mais um curso! 🎉
                            <br><br>
                            Se você enviar a foto do certificado no Instagram
                            <a href="https://www.instagram.com/expertmindacademy"
                               target="_blank"
                               rel="noopener noreferrer"
                               class="instagram-link">
                                @@expertmindacademy
                            </a>
                            irei te dar um presentinho. ❤️
                        </p>
                        <div class="instagram-examples">
                            <strong>💡 Exemplos de envio:</strong>
                            <ul>
                                <li>Certificado no quadro</li>
                                <li>Certificado na parede</li>
                                <li>Segurando o certificado</li>
                                <li>Use sua criatividade!</li>
                            </ul>
                        </div>
                        <p class="instagram-cta">
                            Basta postar e marcar a gente, conto com você! 🚀
                        </p>
                    </div>

                    <form method="post" id="certificateForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="NomeCurso" value="@ViewBag.NomeCurso" />

                        <div class="mb-4">
                            <label for="nomeAluno" class="form-label fw-bold">
                                <i class="fas fa-user"></i> Digite seu nome completo:
                            </label>
                            <input type="text"
                                   name="nomeAluno"
                                   id="nomeAluno"
                                   class="form-control form-control-lg"
                                   placeholder="Ex: João da Silva Santos"
                                   required
                                   autocomplete="name"
                                   minlength="3"
                                   maxlength="100" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="btnSubmit">
                                <i class="fas fa-download"></i> Gerar Certificado
                            </button>

                            <!-- Info Notice -->
                            <div class="info-notice">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>LEIA COM ATENÇÃO!</strong> Após clicar em gerar, verifique os arquivos do seu celular - o certificado estará lá!
                            </div>
                        </div>
                    </form>

                    <div id="loadingSpinner" class="text-center mt-4" style="display: none;">
                        <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Gerando...</span>
                        </div>
                        <p class="mt-3 text-muted fw-bold">
                            Gerando seu certificado...
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

