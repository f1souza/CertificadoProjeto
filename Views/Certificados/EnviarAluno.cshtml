@section Scripts {
    <script>
        const form = document.getElementById('certificateForm');
        const btnSubmit = document.getElementById('btnSubmit');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const nomeInput = document.getElementById('nomeAluno');

        // Variável para controlar se o download foi iniciado
        let downloadIniciado = false;

        form.addEventListener('submit', function(e) {
            const nome = nomeInput.value.trim();

            // Validação básica
            if (nome.length < 3) {
                e.preventDefault();
                alert('Por favor, digite seu nome completo (mínimo 3 caracteres).');
                nomeInput.focus();
                return;
            }

            // Mostra spinner e desabilita botão
            loadingSpinner.style.display = 'block';
            btnSubmit.disabled = true;
            btnSubmit.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';

            // Reset da flag
            downloadIniciado = false;

            // ⭐ Detecta quando o download é iniciado (navegador recebe o arquivo)
            const checkDownload = setInterval(function() {
                // Verifica se o documento está "completo" após envio do form
                if (document.readyState === 'complete' && !downloadIniciado) {
                    downloadIniciado = true;
                    clearInterval(checkDownload);

                    // Aguarda 2 segundos e reseta o formulário
                    setTimeout(function() {
                        // Reseta o spinner e botão
                        loadingSpinner.style.display = 'none';
                        btnSubmit.disabled = false;
                        btnSubmit.innerHTML = '<i class="fas fa-download"></i> Gerar Certificado';

                        // Mostra mensagem de sucesso
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'alert alert-success alert-dismissible fade show mt-3';
                        alertDiv.innerHTML = `
                            <i class="fas fa-check-circle"></i>
                            <strong>Certificado gerado com sucesso!</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;

                        // Insere o alerta após o alert de curso
                        const alertCurso = document.querySelector('.alert-info');
                        alertCurso.parentNode.insertBefore(alertDiv, alertCurso.nextSibling);

                        // Remove o alerta após 5 segundos
                        setTimeout(function() {
                            alertDiv.remove();
                        }, 5000);
                    }, 2000);
                }
            }, 500);

            // ⭐ Timeout de segurança (se após 30s não detectou download, reseta)
            setTimeout(function() {
                if (!downloadIniciado) {
                    clearInterval(checkDownload);
                    loadingSpinner.style.display = 'none';
                    btnSubmit.disabled = false;
                    btnSubmit.innerHTML = '<i class="fas fa-download"></i> Gerar Certificado';

                    // Se houver erro no TempData, não mostra sucesso
                    if (!document.querySelector('.alert-danger')) {
                        alert('⚠️ O certificado pode estar sendo gerado. Verifique seus downloads.');
                    }
                }
            }, 30000);
        });

        // Capitaliza primeira letra de cada palavra
        nomeInput.addEventListener('blur', function() {
            const words = this.value.trim().split(' ');
            const capitalized = words.map(word => {
                if (word.length > 0) {
                    return word.charAt(0).toUpperCase() + word.slice(1).toLowerCase();
                }
                return word;
            });
            this.value = capitalized.join(' ');
        });

        // Auto-foco no campo de nome
        window.addEventListener('load', function() {
            nomeInput.focus();
        });

        // ⭐ Detecta quando o navegador inicia o download de um arquivo
        window.addEventListener('focus', function() {
            if (downloadIniciado === false && btnSubmit.disabled) {
                // Usuário voltou para a página após iniciar download
                downloadIniciado = true;
            }
        });
    </script>
}