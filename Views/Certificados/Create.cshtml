@model AuthDemo.DTOs.CertificateDto
@{
    ViewData["Title"] = "Criar Certificado Visual";
    var googleFonts = new List<string> {
        "Roboto","Open Sans","Lato","Montserrat","Oswald","Raleway","Merriweather","PT Sans",
        "Ubuntu","Noto Sans","Poppins","Source Sans Pro","Nunito","Playfair Display","Roboto Condensed",
        "Inconsolata","Fira Sans","Work Sans","Rubik","Exo 2","Dosis","Quicksand","Bebas Neue",
        "Arimo","Karla","Hind","Varela Round","Josefin Sans","Anton","Cairo","Righteous",
        "IBM Plex Sans","Baloo 2","Catamaran","Teko","Comfortaa","Spectral","Alegreya","Indie Flower"
    };
}

@* Google Fonts *@
@foreach (var font in googleFonts)
{
    <link href="https://fonts.googleapis.com/css2?family=@font.Replace(" ", "+")&display=swap" rel="stylesheet">
}

<div class="container neo-container mt-5">
    @* Mensagem de Sucesso *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success neoalert-success text-center">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @* Cabeçalho *@
    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <h2 class="dashboard-title"><i class="bi bi-award me-2"></i>Criar Certificado</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-logout">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>

    <div class="row g-4">
        @* COLUNA DO FORMULÁRIO *@
        <div class="col-12 col-lg-6">
            <div class="card neo-card animate__animated animate__fadeInLeft">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Dados do Certificado
                    </h5>

                    <form asp-action="Create" asp-controller="Certificados" method="post"
                          enctype="multipart/form-data" id="certificateForm">
                        @Html.AntiForgeryToken()

                        @* Validação de Erros *@
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger animate__animated animate__shakeX">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        @* Upload Template PDF *@
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-file-earmark-pdf me-2"></i>Template do Certificado
                                <span class="text-danger">*</span>
                            </label>
                            <input type="file" name="certificadoVazioFile" class="form-control"
                                   accept=".pdf,.png,.jpg,.jpeg" required />
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>PDF ou imagem (PNG/JPG) do certificado em branco
                            </small>
                        </div>

                        <hr class="my-4" />

                        @* Configuração do Nome do Aluno *@
                        <div class="mb-4 bg-light p-3 rounded">
                            <h6 class="fw-bold mb-3">
                                <i class="bi bi-person-badge me-2"></i>Nome do Aluno
                            </h6>

                            <div class="mb-3">
                                <label class="form-label">Preview do Nome</label>
                                <input type="text" id="nomeAlunoPreview" class="form-control"
                                       placeholder="Digite para testar" value="João da Silva" />
                                <small class="text-muted">Apenas para visualização</small>
                            </div>

                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label">Fonte</label>
                                    <select class="form-select form-select-sm" id="draggableFont">
                                        @foreach (var font in googleFonts)
                                        {
                                            <option value="@font" style="font-family:'@font';">@font</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-3">
                                    <label class="form-label">Tamanho</label>
                                    <input type="number" id="draggableFontSize" class="form-control form-control-sm"
                                           value="24" min="8" max="100" />
                                </div>
                                <div class="col-3">
                                    <label class="form-label">Cor</label>
                                    <input type="color" id="draggableFontColor" class="form-control form-control-sm"
                                           value="#000000" />
                                </div>
                            </div>

                            <div class="row g-2 mt-2">
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="draggableFontWeight" />
                                        <label class="form-check-label" for="draggableFontWeight">
                                            <strong>Negrito</strong>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <select id="draggableTextAlign" class="form-select form-select-sm">
                                        <option value="left">← Esquerda</option>
                                        <option value="center" selected>↔ Centro</option>
                                        <option value="right">→ Direita</option>
                                    </select>
                                </div>
                            </div>

                            <div class="alert alert-info mt-3 mb-0">
                                <i class="bi bi-lightbulb me-2"></i>
                                <small>Arraste o nome na pré-visualização para posicionar</small>
                            </div>

                            <button type="button" class="btn btn-outline-success w-100 mt-3" id="saveConfigBtn">
                                <i class="bi bi-check-circle me-2"></i>Salvar Posição do Nome
                            </button>
                        </div>

                        @* Configuração da Data de Emissão *@
                        <div class="mb-4 bg-light p-3 rounded">
                            <h6 class="fw-bold mb-3">
                                <i class="bi bi-calendar-event me-2"></i>Data de Emissão (Automática)
                            </h6>
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                <small>A data será gerada automaticamente no momento que o aluno baixar o certificado (data atual)</small>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Preview da Data</label>
                                <input type="text" id="dataEmissaoPreview" class="form-control"
                                       value="14/11/2025" readonly style="background-color: #f8f9fa;" />
                                <small class="text-muted">Apenas para visualização - será substituída pela data atual</small>
                            </div>
                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label">Fonte</label>
                                    <select class="form-select form-select-sm" id="draggableDataFont">
                                        @foreach (var font in googleFonts)
                                        {
                                            <option value="@font" style="font-family:'@font';">@font</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-3">
                                    <label class="form-label">Tamanho</label>
                                    <input type="number" id="draggableDataFontSize" class="form-control form-control-sm"
                                           value="12" min="8" max="48" />
                                </div>
                                <div class="col-3">
                                    <label class="form-label">Cor</label>
                                    <input type="color" id="draggableDataFontColor" class="form-control form-control-sm"
                                           value="#000000" />
                                </div>
                            </div>
                            <div class="row g-2 mt-2">
                                <div class="col-6">
                                    <label class="form-label">Formato</label>
                                    <select id="draggableDataFormat" class="form-select form-select-sm">
                                        <option value="dd/MM/yyyy">14/11/2025</option>
                                        <option value="dd-MM-yyyy">14-11-2025</option>
                                        <option value="dd de MMMM de yyyy">14 de Novembro de 2025</option>
                                        <option value="MMMM/yyyy">Novembro/2025</option>
                                    </select>
                                </div>
                                <div class="col-3">
                                    <div class="form-check mt-4">
                                        <input class="form-check-input" type="checkbox" id="draggableDataFontWeight" />
                                        <label class="form-check-label" for="draggableDataFontWeight">
                                            <strong>Negrito</strong>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <label class="form-label">Alinhamento</label>
                                    <select id="draggableDataTextAlign" class="form-select form-select-sm">
                                        <option value="left">← Esquerda</option>
                                        <option value="center" selected>↔ Centro</option>
                                        <option value="right">→ Direita</option>
                                    </select>
                                </div>
                            </div>
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <small>Arraste a data na pré-visualização para posicionar corretamente</small>
                            </div>
                        </div>

                        <hr class="my-4" />

                        @* Campos Obrigatórios *@
                        @await Html.PartialAsync("_RequiredFieldsPartial", Model)

                        <hr class="my-4" />

                        @* Campos Opcionais *@
                        <button class="btn btn-outline-primary w-100 mb-3" type="button"
                                data-bs-toggle="collapse" data-bs-target="#optionalFields">
                            <i class="bi bi-list-check me-2"></i>Campos Opcionais
                        </button>

                        @await Html.PartialAsync("_CertificateFieldsPartial")

                        <hr class="my-4" />

                        @* Toggle Campos Arrastáveis *@
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="toggleDraggables" checked>
                            <label class="form-check-label" for="toggleDraggables">
                                <i class="bi bi-eye me-1"></i>Mostrar campos arrastáveis
                            </label>
                        </div>

                        @* Hidden Fields *@
                        <input type="hidden" name="CertificadoGeradoBase64" id="CertificadoGeradoBase64" />
                        <input type="hidden" name="NomeAlunoConfig" id="NomeAlunoConfig" />

                        @* Botões de Ação *@
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary" id="renderCertificateBtn">
                                <i class="bi bi-eye me-2"></i>Visualizar Preview
                            </button>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-floppy me-2"></i>Salvar Certificado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* COLUNA DE PRÉ-VISUALIZAÇÃO *@
        <div class="col-12 col-lg-6">
            <div class="card neo-card animate__animated animate__fadeInRight sticky-preview">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">
                        <i class="bi bi-eye me-2"></i>Pré-visualização
                    </h5>

                    @* ⭐ REMOVIDAS CLASSES DO BOOTSTRAP: img-fluid, rounded, shadow-sm *@
                    <div id="certificatePreview" class="certificate-preview-area position-relative">
                        @* Placeholder *@
                        <div class="preview-placeholder text-center" id="previewPlaceholder">
                            <i class="bi bi-file-earmark-pdf fs-1 text-muted mb-3 d-block"></i>
                            <h5 class="text-muted">Nenhum certificado carregado</h5>
                            <p class="text-muted mb-0">Faça upload do template para visualizar</p>
                        </div>

                        @* Canvas para PDF *@
                        <canvas id="pdfPreviewCanvas" class="pdf-preview-canvas" style="display:none;"></canvas>

                        @* Imagem (fallback) - SEM CLASSES DE BORDA DO BOOTSTRAP *@
                        <img id="certificadoVazioImg" src="" style="display:none;" alt="Certificado" />

                        @* Nome do Aluno Draggable *@
                        <div id="draggableNomeAluno" class="draggable-field" style="display:none;">
                            <span id="nomeAlunoText" class="draggable-text">João da Silva</span>
                            <div class="drag-handle">
                                <i class="bi bi-arrows-move"></i>
                            </div>
                        </div>

                        @* Data de Emissão Draggable *@
                        <div id="draggableDataEmissao" class="draggable-field" style="display:none; background-color: rgba(40, 167, 69, 0.1);">
                            <span id="dataEmissaoText" class="draggable-text">14/11/2025</span>
                            <div class="drag-handle" style="background-color: #28a745;">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                        </div>
                    </div>

                    @* Indicadores de Posição *@
                    <div class="mt-3 p-2 bg-light rounded" id="positionInfo" style="display:none;">
                        <small class="text-muted">
                            <strong>Posição:</strong>
                            X: <span id="posX">0</span>px,
                            Y: <span id="posY">0</span>px
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <link href="~/css/Certificados/Create.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    <script>
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <!-- Scripts na ordem correta -->
    <script src="~/js/cert-preview.js"></script>
    <script src="~/js/cert-nome-aluno.js"></script>
    <script src="~/js/cert-optional-fields.js"></script>
    <script src="~/js/cert-pdf-generator.js"></script>
}