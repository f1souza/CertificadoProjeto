@model AuthDemo.DTOs.TrilhaDto

@{
    ViewData["Title"] = "Editar Trilha";
    var certificados = ViewBag.Certificados as List<AuthDemo.Models.Certificate>;
}

@section Styles {
    <link href="~/css/Trilhas/EditTrilha.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Trilha: @Model.Nome
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label for="Nome" class="form-label fw-bold">
                                <i class="fas fa-tag"></i> Nome da Trilha *
                            </label>
                            <input type="text"
                                   asp-for="Nome"
                                   class="form-control form-control-lg"
                                   required />
                        </div>

                        <div class="mb-4">
                            <label for="Descricao" class="form-label fw-bold">
                                <i class="fas fa-align-left"></i> Descrição
                            </label>
                            <textarea asp-for="Descricao"
                                      class="form-control"
                                      rows="3"></textarea>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input type="checkbox"
                                       asp-for="Ativa"
                                       class="form-check-input"
                                       id="Ativa" />
                                <label class="form-check-label" for="Ativa">
                                    <i class="fas fa-toggle-on"></i> Trilha ativa
                                </label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label fw-bold mb-0">
                                    <i class="fas fa-certificate"></i> Certificados *
                                </label>
                                <div>
                                    <button type="button" class="btn btn-sm btn-outline-primary" id="btnSelecionarTodos">
                                        <i class="fas fa-check-double"></i> Todos
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnLimpar">
                                        <i class="fas fa-times"></i> Limpar
                                    </button>
                                </div>
                            </div>

                            @if (certificados != null && certificados.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var cert in certificados)
                                    {
                                        <div class="col-md-6">
                                            <div class="card border-primary shadow-sm certificate-card">
                                                <div class="card-body">
                                                    <div class="form-check">
                                                        <input class="form-check-input certificate-checkbox"
                                                               type="checkbox"
                                                               name="certificadosSelecionados"
                                                               value="@cert.Id"
                                                               id="cert_@cert.Id"
                                                               @(Model.CertificadosIds.Contains(cert.Id) ? "checked" : "")>
                                                        <label class="form-check-label w-100" for="cert_@cert.Id">
                                                            <h6 class="mb-1 text-primary fw-bold">@cert.NomeCurso</h6>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-clock"></i> @cert.CargaHoraria horas
                                                            </small>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="mt-3 text-center">
                                    <span class="badge bg-info fs-6 py-2 px-3" id="contadorSelecionados">
                                        <i class="fas fa-check-circle"></i>
                                        <span id="numeroSelecionados">0</span> selecionado(s)
                                    </span>
                                </div>
                            }
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function atualizarContador() {
            const checkboxes = document.querySelectorAll('.certificate-checkbox:checked');
            document.getElementById('numeroSelecionados').textContent = checkboxes.length;

            const badge = document.getElementById('contadorSelecionados');
            badge.className = 'badge fs-6 py-2 px-3 ' +
                (checkboxes.length === 0 ? 'bg-secondary' : 'bg-info');
        }

        document.getElementById('btnSelecionarTodos').addEventListener('click', function() {
            document.querySelectorAll('.certificate-checkbox').forEach(cb => cb.checked = true);
            atualizarContador();
        });

        document.getElementById('btnLimpar').addEventListener('click', function() {
            document.querySelectorAll('.certificate-checkbox').forEach(cb => cb.checked = false);
            atualizarContador();
        });

        document.querySelectorAll('.certificate-checkbox').forEach(cb => {
            cb.addEventListener('change', atualizarContador);
        });

        document.querySelectorAll('.certificate-card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (e.target.type === 'checkbox' || e.target.tagName === 'LABEL') return;
                const checkbox = card.querySelector('.certificate-checkbox');
                checkbox.checked = !checkbox.checked;
                atualizarContador();
            });
        });

        atualizarContador();
    </script>
}