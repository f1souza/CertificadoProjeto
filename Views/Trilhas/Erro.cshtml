@{
    ViewData["Title"] = "Erro - Trilha não encontrada";
    var errorMessage = ViewBag.ErrorMessage ?? "Trilha não encontrada.";
}


@section Styles {
    <link href="~/css/Trilhas/ErroTrilha.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Ops!
                    </h2>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-route text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h4 class="text-danger mb-3">@errorMessage</h4>
                    <p class="text-muted mb-4">
                        A trilha que você está tentando acessar não existe ou foi removida.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home"></i> Voltar para o Início
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>