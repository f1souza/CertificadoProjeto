@model AuthDemo.Services.TrilhaDetalhesDto

@{
    ViewData["Title"] = "Gerar Certificados - " + Model.Nome;
}

@section Styles {
    <link href="~/css/Trilhas/GerarTrilha.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
    <style>

        /* Success Message */
        .success-message {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border-radius: 1.25rem;
            padding: 3rem 2rem;
            color: #ffffff;
            text-align: center;
            box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
            animation: fadeInScale 0.6s ease both;
        }

            .success-message .icon {
                font-size: 5rem;
                margin-bottom: 1.5rem;
                animation: heartBeat 1.5s infinite;
            }

            .success-message h2 {
                font-size: 2.5rem;
                font-weight: 800;
                margin-bottom: 1rem;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            .success-message p {
                font-size: 1.25rem;
                margin-bottom: 0;
            }

        /* Info Notice */
        .info-notice {
            background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
            border: 3px solid #ff9800;
            border-radius: 0.75rem;
            padding: 1rem 1.5rem;
            color: #000000;
            text-align: center;
            margin-top: 1rem;
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4), 0 0 0 4px rgba(255, 193, 7, 0.1);
            animation: fadeIn 0.5s ease, pulseGlow 2s infinite;
        }

            .info-notice i {
                font-size: 1.3rem;
                margin-right: 0.5rem;
                animation: wobble 1s ease infinite;
                display: inline-block;
            }

            .info-notice strong {
                font-size: 1.05rem;
                font-weight: 800;
            }

        @@keyframes pulseGlow {
            0%, 100%

        {
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4), 0 0 0 4px rgba(255, 193, 7, 0.1);
        }

        50% {
            box-shadow: 0 4px 20px rgba(255, 193, 7, 0.6), 0 0 0 6px rgba(255, 193, 7, 0.2);
        }

        }

        @@keyframes wobble {
            0%, 100%

        {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-15deg);
        }

        75% {
            transform: rotate(15deg);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInScale {
            from

        {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        @@keyframes bounce {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        50% {
            transform: translate(-20px, -20px) rotate(180deg);
        }

        }

        @@keyframes heartBeat {
            0%, 100%

        {
            transform: scale(1);
        }

        10%, 30% {
            transform: scale(1.1);
        }

        20%, 40% {
            transform: scale(1);
        }

        }

        /* Mobile Responsiveness */
        @@media (max-width: 768px) {
        .success-message h2 {
            font-size: 2rem;
        }

        .success-message .icon {
            font-size: 4rem;
        }

        .info-notice {
            font-size: 0.9rem;
            padding: 0.875rem 1.25rem;
        }

        }</style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-success text-white py-4">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-graduation-cap"></i> @Model.Nome
                    </h2>
                    <p class="text-center mb-0 mt-2">
                        Obtenha todos os certificados desta trilha
                    </p>
                </div>

                <div class="card-body p-4">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Success Message -->
                    <div id="successMessage" class="success-message mb-4" style="display: none;">
                        <div class="icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h2>Certificado Concluído!</h2>
                        <p>Obrigado ❤️</p>
                    </div>

                    <!-- Conteúdo Principal -->
                    <div id="mainContent">
                        <hr class="my-4">

                        <!-- Formulário -->
                        <form method="post"
                              id="formGerar"
                              asp-action="Gerar"
                              asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label for="nomeAluno" class="form-label fw-bold fs-5">
                                    <i class="fas fa-user"></i> Seu Nome:
                                </label>

                                <input type="text"
                                       name="nomeAluno"
                                       id="nomeAluno"
                                       class="form-control form-control-lg"
                                       placeholder="Ex: João da Silva Santos"
                                       required
                                       autocomplete="name" />
                                <div class="form-text">
                                    <i class="fas fa-lightbulb"></i>
                                    Preencha seu nome corretamente - ele aparecerá em TODOS os certificados desta trilha
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg" id="btnGerar">
                                    <i class="fas fa-download"></i> Gerar Meus Certificados
                                </button>

                                <!-- Info Notice -->
                                <div class="info-notice">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>LEIA COM ATENÇÃO!</strong> Após clicar em gerar, verifique os arquivos do seu celular - os certificados estarão lá!
                                </div>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Publicas")" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left"></i> Ver Todas as Trilhas
                                    </a>
                                }
                            </div>
                        </form>

                        <!-- Loading -->
                        <div id="loadingSpinner" class="text-center mt-4" style="display: none;">
                            <div class="spinner-border text-success" style="width: 4rem; height: 4rem;">
                                <span class="visually-hidden">Processando...</span>
                            </div>
                            <p class="mt-3 text-muted fw-bold fs-5">
                                <i class="fas fa-cogs"></i> Gerando seus certificados...
                            </p>
                            <p class="text-muted">
                                Por favor, aguarde. Este processo pode levar alguns segundos.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formGerar = document.getElementById('formGerar');
            const nomeAluno = document.getElementById('nomeAluno');
            const btnGerar = document.getElementById('btnGerar');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const mainContent = document.getElementById('mainContent');
            const successMessage = document.getElementById('successMessage');

            let isProcessing = false;

            // Validação no submit
            formGerar.addEventListener('submit', function(e) {
                const nome = nomeAluno.value.trim();

                if (nome.length === 0) {
                    e.preventDefault();
                    alert('⚠️ Por favor, preencha seu nome!');
                    nomeAluno.focus();
                    return false;
                }

                // Marca como processando
                isProcessing = true;

                // Mostra loading
                loadingSpinner.style.display = 'block';
                btnGerar.disabled = true;
                btnGerar.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';

                loadingSpinner.scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });

                // Após 3 segundos, mostra mensagem de sucesso
                setTimeout(function() {
                    isProcessing = false;
                    mainContent.style.display = 'none';
                    successMessage.style.display = 'block';

                    // Scroll para a mensagem de sucesso
                    successMessage.scrollIntoView({
                        behavior: 'smooth',
                        block: 'center'
                    });
                }, 3000);
            });

            // Remove a prevenção de fechamento - agora não bloqueia mais
            window.addEventListener('beforeunload', function(e) {
                if (isProcessing) {
                    e.preventDefault();
                    e.returnValue = 'Os certificados estão sendo gerados. Tem certeza que deseja sair?';
                    return e.returnValue;
                }
            });
        });
    </script>
}