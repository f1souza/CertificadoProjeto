@model AuthDemo.DTOs.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var permission = Model.Permission;
    var certificados = Model.Certificados;
    var usuarios = Model.Usuarios;
}

<div class="container dashboard-container mt-4">
    @* Mensagem de sucesso *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success neoalert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="dashboard-title">Dashboard</h2>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
            <button class="btn btn-outline-danger btn-logout">Sair</button>
        </form>
    </div>

    <div class="row g-4">
        <!-- Certificados -->
        <div class="col-12 col-md-8">
            <div class="card neo-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Certificados</h5>
                        @if (permission == "Admin" || permission == "Instrutor")
                        {
                            <a asp-controller="Certificados" asp-action="Create" class="btn btn-sm btn-primary neo-btn mb-2">
                                Criar Certificado
                            </a>
                        }
                    </div>

                    @if (certificados != null && certificados.Any())
                    {
                        <div class="certificados-grid">
                            @foreach (var c in certificados)
                            {
                                <div class="certificado-card neo-card position-relative">
                                    <div class="certificado-img-wrapper">
                                        <img src="@(!string.IsNullOrEmpty(c.CertificadoVazio) ? c.CertificadoVazio : "~/images/certificados/placeholder.png")"
                                             class="certificado-img"
                                             alt="@c.NomeCurso" />
                                    </div>
                                    <div class="card-body text-center">
                                        <h6 class="card-title">@c.NomeCurso</h6>
                                        <div class="mt-2 d-flex justify-content-center gap-2 flex-wrap">
                                            @if (permission == "Admin")
                                            {
                                                <form asp-controller="Certificados" asp-action="Delete" method="post" class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@c.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger neo-btn-sm"
                                                            onclick="return confirm('Confirma exclusão do certificado @c.NomeCurso?');">
                                                        Deletar
                                                    </button>
                                                </form>
                                            }

                                            @if (permission == "Admin" || permission == "Instrutor")
                                            {
                                                <!-- Certificar um aluno individual -->
                                                <a href="@Url.Action("EnviarAluno", "Certificados", new { nomeCurso = c.NomeCurso })"
                                                   class="btn btn-sm btn-outline-success neo-btn-sm"
                                                   title="Certificar um aluno">
                                                    <i class="bi bi-person-check"></i> Certificado
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center neoalert-info">
                            Nenhum certificado cadastrado ainda.
                            @if (permission == "Admin" || permission == "Instrutor")
                            {
                                <span>Clique em <strong>Criar Certificado</strong> para adicionar o primeiro!</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Usuários -->
        <div class="col-12 col-md-4">
            <div class="card neo-card">
                <div class="card-body">
                    <h5 class="card-title">Usuários</h5>
                    @if (permission == "Admin")
                    {
                        <a asp-controller="Users" asp-action="Create" class="btn btn-sm btn-success neo-btn mb-2">Criar Usuário</a>
                    }

                    <ul class="list-group list-group-flush">
                        @foreach (var u in usuarios)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center neo-list-item">
                                <div>
                                    <strong>@u.Username</strong><br />
                                    <small>@u.Email</small>
                                </div>
                                <div class="text-end">
                                    <small class="d-block">@u.Permission</small>
                                    @if (permission == "Admin" && u.Permission == "Colaborador")
                                    {
                                        <form asp-controller="Users" asp-action="Delete" method="post" class="d-inline-block ms-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger neo-btn-sm"
                                                    onclick="return confirm('Confirma exclusão do usuário @u.Username?');">
                                                Excluir
                                            </button>
                                        </form>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- ========================================== -->
    <!-- SEÇÃO: TRILHAS DE CERTIFICADOS -->
    <!-- ========================================== -->
    @if (permission == "Admin" || permission == "Instrutor")
    {
        <div class="row g-4 mt-3">
            <div class="col-12">
                <div class="card neo-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-route"></i> Trilhas de Certificados
                            </h5>
                            <div>
                                <a asp-controller="Trilhas" asp-action="Index" class="btn btn-sm btn-info neo-btn">
                                    <i class="fas fa-list"></i> Gerenciar Trilhas
                                </a>
                                <a asp-controller="Trilhas" asp-action="Create" class="btn btn-sm btn-primary neo-btn">
                                    <i class="fas fa-plus"></i> Nova Trilha
                                </a>
                            </div>
                        </div>

                        <div class="alert alert-info neoalert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Trilhas</strong> são conjuntos de certificados que podem ser compartilhados por link público.
                            Crie trilhas para organizar cursos relacionados!
                        </div>

                        <div class="text-center">
                            <a asp-controller="Trilhas" asp-action="Index" class="btn btn-lg btn-outline-primary">
                                <i class="fas fa-graduation-cap"></i> Acessar Gerenciamento de Trilhas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <link href="~/css/Home/IndexHome.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
}